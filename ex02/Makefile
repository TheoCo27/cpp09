NAME        := PmergeMe
CXX         := c++
CXXFLAGS    := -Wall -Wextra -Werror -std=c++98

SRC         := main.cpp PmergeMe.cpp helper.cpp helper_v.cpp deque_version.cpp
OBJ_DIR     := obj
OBJ         := $(SRC:%.cpp=$(OBJ_DIR)/%.o)

# === Couleurs pour plus de clart√© ===

GREEN := \033[0;32m
BLUE  := \033[0;34m
RESET := \033[0m

# === R√®gles ===

all: $(NAME)

# Compilation finale
$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) -o $@ $^
	@echo "$(GREEN)[‚úî] Compilation termin√©e : $(NAME)$(RESET)"

# Compilation des fichiers .o
$(OBJ_DIR)/%.o: %.cpp
	@mkdir -p $(OBJ_DIR)
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)
	@echo "$(BLUE)[üßπ] Fichiers objets supprim√©s$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(BLUE)[üóë] Ex√©cutable supprim√© : $(NAME)$(RESET)"

re: fclean all

run1:
	@echo "Ex√©cution de $(NAME) avec 1000 entiers positifs tri√©s..."
	@./$(NAME) $(shell seq 1 1000)

run2:
	@echo "Ex√©cution de $(NAME) avec 1000 entiers positifs al√©atoires..."
	@./$(NAME) $(shell shuf -i 1-3000 -n 3000)

run3:
	@echo "Ex√©cution de $(NAME) avec 1000 entiers positifs al√©atoires..."
	@./$(NAME) $(shell shuf -i 1-10000 -n 10000)


.PHONY: all clean fclean re run